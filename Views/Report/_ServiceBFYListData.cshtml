@using System.Data
@using FP.Manager
@{
    DataTable dt = new DataTable();
    dt = Model;
}

<div class="table-responsive">
    <table class="table table-bordered table-striped" id="tbl">
        <thead class="text-center">
            <tr>
                <th>Srno.</th>
                <th>Beneficiary<br /> ID</th>
                <th>Name of<br />Beneficiary</th>
                <th>Mobile no. of beneficiary</th>
                <th>Service <br />Reporting </th>
                <th>Reported By </th>
                <th>@FP.Models.DisplayFollowBFY.Ct</th>
                <th>@FP.Models.DisplayFollowBFY.Ctusemethod</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (dt.Rows.Count > 0)
                {
                    int srno = 1;
                    foreach (DataRow dr in dt.Rows)
                    {

                        <tr>
                            <td class="text-center">@(srno++)</td>
                            <td class="text-center">@dr["BFYRegId"]</td>
                            <td class="text-left">@dr["BFYName"]</td>
                            <td class="text-center">@dr["BFYMobileNo"]</td>
                            <td class="text-center">@dr["SReportingDate"].ToString()</td>
                            <td class="text-center">@dr["ServiceReportedBy"]</td>
                            <td class="text-center">@dr["ConName"]</td>
                            <td class="text-center">@dr["Use_MethodName"]</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center"><strong class="text-danger">Record Not Found !!</strong></td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>
